<h1>Here's your table</h1>

<div>

    <form action="insert" method="GET">
        <label>name</label><br>
        <input type="text" name="name" required><br>
        <label>reps</label><br>
        <input type="number" name="reps" required><br>
        <label>weight</label><br>
        <input type="number" name="weight" required><br>
        <label>date</label><br>
        <input type="date" name="date" required><br>
        <label>unit</label><br>
        <input type="text" name="unit" required><br>
        <button type="submit">SUBMIT</button>
    </form>

</div>
<br>




<table>
    <thead>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>reps</th>
            <th>weight</th>
            <th>date</th>
            <th>unit</th>
            <th>ADD</th>
        </tr>
    </thead>
    <tbody>

        {{#each results}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.reps}}</td>
            <td>{{this.weight}}</td>
            <td>{{this.date}}</td>
            <td>{{this.unit}}</td>
            <td><a href="/delete?id={{this.id}}">Delete</a></td>
            <td><a
                    href="/delete?id={{this.id}}&name={{this.name}}&reps={{this.reps}}&weight={{this.weight}}&date={{this.date}}&unit={{this.unit}}">Edit</a>
            </td>
        </tr>
        {{/each}}
    </tbody>

</table>